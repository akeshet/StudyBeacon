<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background="@color/rowBackground" >

    <CheckBox
        android:id="@+id/mcrStarButton"
        android:layout_width="@dimen/iconSize"
        android:layout_height="@dimen/iconSize"
        android:button="@drawable/favoritetoggle"
        android:checked="true" />
    
    <TextView
        android:id="@+id/mcrCourseNameTextView"
        android:layout_width="0dp"
        android:layout_height="@dimen/iconSize"
        android:gravity="center_vertical"
        android:layout_gravity="center|center_vertical"
        android:layout_weight="1"/>
    
     <CheckBox
         android:id="@+id/mcrNotificationButton"
         android:layout_width="@dimen/iconSize"
         android:layout_height="@dimen/iconSize"
         android:layout_gravity="right|center_vertical"
         android:button="@drawable/notifytoggle"
         android:visibility="gone" />
         
    <ImageButton
        android:id="@+id/mcrNewBeaconButton"
        android:layout_width="@dimen/iconSize"
        android:layout_height="@dimen/iconSize"
        android:src="@drawable/newbeaconbutton"
        android:layout_gravity="right|center_vertical"
        android:background="@null"/>

</LinearLayout>
